<% layout("layouts/boilerPlate.ejs") %>
<%- include('../partials/flash'); %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0" style="background: #e3f2fd;">
        <div class="card-header text-white text-center" style="background-color: #1565c0;">
          <h3>Login</h3>
        </div>
        <div class="card-body">
          <form action="/login" method="POST">
            <div class="mb-3">
              <label for="username" class="form-label text-primary">Username</label>
              <input type="text" class="form-control" id="username" name="username" required>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label text-primary">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary" style="background-color: #1565c0;">Log In</button>
            </div>
          </form>
        </div>
        <div class="card-footer text-center" style="background-color: #bbdefb;">
          Don't have an account? <a href="/register" class="text-decoration-none text-dark">Sign up here</a>
        </div>
      </div>
    </div>
  </div>
</div>
