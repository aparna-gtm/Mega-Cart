<% layout("layouts/boilerPlate.ejs") %>
<%- include('../partials/flash'); %>



<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0" style="background: #e3f2fd;">
        <div class="card-header text-white text-center" style="background-color: #1565c0;">
          <h3>Sign Up</h3>
        </div>
        <div class="card-body">
          <form action="/register" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label text-primary">Username</label>
              <input type="text" class="form-control" id="name" name="username" required>
            </div>

            <div class="mb-3">
              <label for="email" class="form-label text-primary">Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>

            <div class="mb-3">
              <p>Want to register as ?</p>
              <div class="mx-2">
                 
                <input type="radio" class="form-check-input" id="buyer" name="role" value="buyer">
                <label for="buyer" class="form-label text-primary">&nbsp;Buyer </label>
              </div>
              <div class="mx-2">
                 
                <input type="radio" class="form-check-input" id="seller" name="role" value="seller">
                <label for="seller" class="form-label text-primary">&nbsp;Seller </label>
              </div>
             
            </div>
           

            <div class="mb-3">
              <label for="password" class="form-label text-primary">Password</label>
              <input type="password" class="form-control" id="password" name="password" required minlength="6">
            </div>

            <div class="mb-3">
              <label for="confirmPassword" class="form-label text-primary">Confirm Password</label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6">
            </div>

            <div class="form-check mb-3">
              <input type="checkbox" class="form-check-input" id="terms" required>
              <label class="form-check-label text-primary" for="terms">I agree to the terms and conditions</label>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary" style="background-color: #1565c0;">Create Account</button>
            </div>
          </form>
        </div>
        <div class="card-footer text-center" style="background-color: #bbdefb;">
          Already have an account? <a href="/login" class="text-decoration-none text-dark">Login</a>
        </div>
      </div>
    </div>
  </div>
</div>

